    hidden [TextBoxComponent]$_searchBox
    hidden [Panel]$_panel
    [hashtable]$Actions = @{}
    [scriptblock]$OnExecute
    hidden [List[string]]$_filteredActions

    CommandPalette([string]$name) : base($name) {
