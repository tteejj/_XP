# Debug startup script
$DebugPreference = "Continue"
$VerbosePreference = "Continue"

try {
    & "$PSScriptRoot\Start.ps1"
} catch {
    Write-Host "Debug error information:" -ForegroundColor Yellow
    Write-Host "Error: $_" -ForegroundColor Red
    Write-Host "Exception: $($_.Exception)" -ForegroundColor Red
    Write-Host "Stack: $($_.ScriptStackTrace)" -ForegroundColor Gray
    Write-Host "Target Object: $($_.TargetObject)" -ForegroundColor Gray
    Read-Host "Press Enter to exit"
}
